<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja_claro"
    tools:context=".inicio2">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="118dp"
            android:layout_height="116dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.069"
            app:srcCompat="@drawable/avatar1"
            tools:ignore="ContentDescription,ImageContrastCheck"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="118dp"
            android:layout_height="116dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.726"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23"
            app:srcCompat="@drawable/avatar2"
            tools:ignore="ContentDescription,ImageContrastCheck"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="118dp"
            android:layout_height="116dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.228"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.395"
            app:srcCompat="@drawable/avatar3"
            tools:ignore="ContentDescription"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="118dp"
            android:layout_height="116dp"
            android:layout_marginBottom="292dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.726"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/avatar4"
            tools:ignore="ContentDescription,ImageContrastCheck"            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="251dp"
            android:layout_height="205dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="@string/unete_a_nuestra_comunidad_de_usuarios_que_estan_usando_nuestra_app_a_diario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:layout_constraintVertical_bias="0.166"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/botonContinuar2"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/naranja_oscuro"
            android:text="@string/continuar2"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.472"
            tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
